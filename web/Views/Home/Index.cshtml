    <div class="col-md-4">
        <input id="FullName"/>
        <input id="Username"/>
        <input id="Password" type="password"/>
        <textarea id="request"></textarea>
        <textarea id="response"></textarea>
        <button onclick="sendRequest()">click</button>

        <script>
            function copyParam(params) {
                var result = {};
                for (var i = 0; i < params.length; i++) {
                    var j = params[i];
                    result[j] = $("#" + j).val();
                }
                return result;
            }
            function sendRequest() {

                var params = copyParams(["FullName", "Username", "Password"]);
                var req = new XMLHttpRequest();
                req.onload = injArg(putInfo, req);
                req.open("put", "/apiv1/users/", true);
                
                req.send(params);
            }

            function injArg(func, arg) {
                return function() { func(arg); };
            }

            function putInfo(req) {
                $("#response").html(req.responseText);
            }
            
        </script>
    </div>
</div>